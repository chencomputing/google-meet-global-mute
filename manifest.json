{
    "name": "Google Meet Global Mute",
    "description": "Provides a configurable way to mute meetings in Google Meet!",
    "version": "1.0",
    "manifest_version": 3,
    "permissions": [
        "tabs"
      ],
    "background": {
        "service_worker": "background.js"
      },
      "commands": {
        "toggle-mute": {
          "suggested_key": "Ctrl+Shift+6",
          "description": "Toogle mute status",
          "global": true
        }
      },
    "content_scripts": [
        {
            "matches": ["https://meet.google.com/*"],
            "js":["content-script.js"]
        }
    ]
  }